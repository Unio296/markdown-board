<div class="container mt-4 mb-4">
  <div class="row">
    <div class="profile-card card col-sm-3">
      <%= image_tag @user.image_url, size:"64x64", alt:"profile img", class:"mt-3 ml-3"%>
      <div class="card-body">
        <div class="card-title">
          <%= @user.name %>
        </div>
        <%= link_to '新規投稿', new_user_post_path(@user.nickname), class:"btn btn-primary " %>
      </div>
    </div>

    <div class="col-sm-8 offset-sm-1">
      <h2>投稿一覧</h2>
      <% @posts.map do |post| %>
      <div class="post border-top p-2">
        <%= link_to truncate(post.title), user_post_path(@user.nickname, post.slug),class:"post-title" %>
        <p class="post-content"><%= truncate(post.content) %></p>
        <p class="post-date"><%= time_ago_in_words post.created_at %> ago </p>
        <%= link_to '編集', edit_user_post_path(@user.nickname, post.slug) ,class:"btn btn-pill btn-outline-success" %>
        <%= link_to '削除', user_post_path(@user.nickname, post.slug), method: :delete ,class:"btn btn-pill btn-outline-danger",data:
      {confirm: "本当に<strong>#{post.title}</strong>を削除してよろしいですか？",
      cancel: "キャンセル",
      commit: "削除する"},
      title: "削除前確認" %>

      </div>
      <% end %>
    </div>

  </div>
</div>