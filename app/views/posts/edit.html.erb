<% provide(:title, 'Edit the Post') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@post, url: user_post_path(@user.nickname, @post.slug), html: {method:"patch"}) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :content %>
      <%= f.text_area :content ,placeholder: "contents..."%>

      <%= f.submit "Update Post", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>