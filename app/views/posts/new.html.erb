<% provide(:title, 'Create New Post') %>
<h1>New Post</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@post, url: user_posts_path) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :content %>
      <%= f.text_area :content ,placeholder: "contents..."%>

      <%= f.submit "Post", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>